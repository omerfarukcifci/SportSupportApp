<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.support.sport.sportsupport.ViewPackage.Management.SpecialOfferManagementScreen">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1">

            <EditText
                android:id="@+id/soffer_name_M"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Special Offer Name"
                android:maxLines="1"
                android:singleLine="true" />

            <EditText
                android:id="@+id/soffer_branch_name_M"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Branch Name"
                android:maxLines="1"
                android:singleLine="true" />

            <EditText
                android:id="@+id/soffer_start_date_M"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Start Date"
                android:maxLines="1"
                android:singleLine="true" />

            <EditText
                android:id="@+id/soffer_end_date_M"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="End Date"
                android:maxLines="1"
                android:singleLine="true" />

            <EditText
                android:id="@+id/soffer_reference_number__limitM"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Reference Number Limit"
                android:maxLines="1"
                android:singleLine="true" />

            <EditText
                android:id="@+id/soffer_attendance_limit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Attendance Limit"
                android:maxLines="1"
                android:singleLine="true" />

            <Button
                android:id="@+id/create_soffer_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@color/colorPrimary"
                android:text="Create New Special Offer" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1">

            <EditText
                android:id="@+id/delete_soffor_name_M"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Special Offer Name"
                android:maxLines="1"
                android:singleLine="true" />

            <Button
                android:id="@+id/soffer_delete_M"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@color/colorPrimary"
                android:text="Delete Special Offer" />

        </LinearLayout>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
