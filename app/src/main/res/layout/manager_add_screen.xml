<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.support.sport.sportsupport.ViewPackage.Management.ManagerAddScreen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1">

            <EditText
                android:id="@+id/manager_name_M"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Manager Name"
                android:maxLines="1"
                android:singleLine="true" />

            <EditText
                android:id="@+id/manager_surname_M"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Manager Surname"
                android:maxLines="1"
                android:singleLine="true" />

            <EditText
                android:id="@+id/manager_username_M"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Manager Username"
                android:maxLines="1"
                android:singleLine="true" />

            <EditText
                android:id="@+id/manager_branchID_M"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Manager's Branch Id"
                android:maxLines="1"
                android:singleLine="true" />

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:passwordToggleContentDescription="Password"
                app:passwordToggleDrawable="@drawable/ic_keyboard_arrow_right_black_24dp"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="@color/colorAccent">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/manager_password_M"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Password"
                    android:inputType="textPassword" />
            </android.support.design.widget.TextInputLayout>

            <Button
                android:id="@+id/create_manager_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Create Manager"
                android:layout_margin="5dp"
                android:background="@color/colorPrimary"/>
        </LinearLayout>


    </LinearLayout>


</android.support.constraint.ConstraintLayout>
