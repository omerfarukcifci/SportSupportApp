<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <ImageView
        android:layout_weight="2"
        android:scaleType="fitCenter"
        android:src="@drawable/class_small"
        android:padding="5dp"
        android:layout_width="0dp"
        android:layout_height="match_parent" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="5"
        android:layout_width="0dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/course_list_nameU"
            android:layout_marginTop="8dp"
            android:text="ZUMBA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#103cdc"
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/course_list_next_lecU"
            android:layout_marginTop="3dp"
            android:textSize="18sp"
            android:text="Every Sunday!"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/course_list_quotaU"
            android:text="QUTA: 40/50"
            android:layout_marginTop="3dp"
            android:textSize="15sp"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/course_list_end_dateU"
            android:text="Ends at: 24/05/2018"
            android:layout_marginTop="3dp"
            android:textSize="15sp"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>



</LinearLayout>