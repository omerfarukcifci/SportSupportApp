<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.support.sport.sportsupport.ViewPackage.Menu.UpdateProfileScreen">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:textColor="#000000"
                android:text="UPDATE PROFILE INFORMATION" />

            <EditText
                android:id="@+id/editTextUpdate_newusername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="New Username" />

            <EditText
                android:id="@+id/editTextUpdate_newpassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="*****"
                android:hint="New Password" />
            <EditText
                android:id="@+id/editTextUpdate_newname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="New Name" />

            <EditText
                android:id="@+id/editTextUpdate_newsurname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="New Surname" />
            <EditText
                android:id="@+id/editTextUpdate_birthday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Birthday" />

            <EditText
                android:id="@+id/editTextUpdate_mail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="E-mail" />

            <TextView
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CONFIRM CHANGES"
                android:textColor="#000000"
                android:gravity="center"/>

            <EditText
                android:id="@+id/editTextUpdate_oldusername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Old Username" />

            <EditText
                android:id="@+id/editTextUpdate_oldpassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Old Password" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/buttonUpdate"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="30dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginLeft="20dp"
                    android:background="@color/colorPrimary"
                    android:text="Update" />
                <Button
                    android:id="@+id/buttonDelete"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="30dp"
                    android:background="#de7979"
                    android:text="Delete Account" />
            </LinearLayout>



        </LinearLayout>



    </LinearLayout>

</RelativeLayout>
