<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.support.sport.sportsupport.ViewPackage">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="Main"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:noHistory="true"
            android:name=".SignInScreen"
            android:label="@string/title_activity_sign_in" />
        <activity
            android:noHistory="true"
            android:name=".SignUpScreen"
            android:label="@string/title_activity_sign_up" />
        <activity android:name=".WelcomeScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Menu.CustomerNavigationMenu"
            android:label="@string/title_activity_menu"
            android:theme="@style/AppTheme" />
        <activity android:name=".Menu.UpdateProfileScreen" android:noHistory="true"/>
        <activity android:name=".Menu.MyScheduleScreen" android:noHistory="true"/>
        <activity android:name=".Menu.MembershipOptionsScreen" />
        <activity android:name=".Menu.PaymentScreen" android:noHistory="true"/>
        <activity android:name=".Menu.CancelMembershipScreen" android:noHistory="true"/>
        <activity android:name=".Menu.MyCoursesScreen" />
        <activity android:name=".Menu.FragmentCourse" />
        <activity android:name=".Management.FragmentManagementPanel" />
        <activity android:name=".Management.ManagerManagementScreen" />
        <activity android:name=".Management.UserManagementScreen" />
        <activity android:name=".Management.TrainerManagementScreen" />
        <activity android:name=".Management.TraineeManagementScreen" />
        <activity android:name=".Management.CourseManagementScreen" />
        <activity android:name=".Management.BranchManagementScreen" />
        <activity android:name=".Management.SpecialOfferManagementScreen" />
        <activity android:name=".Management.SpecialOfferAddScreen" android:noHistory="true" />
        <activity android:name=".Management.ManagerAddScreen" android:noHistory="true" />
        <activity android:name=".Management.BranchAddScreen" android:noHistory="true"/>
        <activity android:name=".Management.CourseAddScreen" android:noHistory="true" />
        <activity android:name=".Management.TrainerAddScreen" android:noHistory="true"/>
        <activity android:name=".Management.UserAddScreen" android:noHistory="true"/>
    </application>

</manifest>